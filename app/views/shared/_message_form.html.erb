<%= form_tag(send_message_user_path(@user), :method => :post,
	 :html => {:class =>"form-horizontal"}) do %>
	<div class="control-group">
		<%= label_tag :content, "Write", :class => "control-label" %>
		<div class="controls">
			<%= text_area_tag :content, nil, :class => "text_area"  %>
		</div>		
	</div>
	<div class="actions">
      	<%= submit_tag "Send", :class => "btn btn-primary" %>
    </div>
<% end %>