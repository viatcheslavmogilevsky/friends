<%= form_for [@parent,@comment], :html => {:class => "form-horizontal"} do |f| %>
	<%= render 'shared/error_messages', :object => f.object %> 
	<div class="control-group">
 		<div class="controls">
 			<%= f.text_area :content, :class => "text_area" %>
 		</div>
	</div>
 	<div class="actions">
 		<%= f.submit "Submit comment", :class => "btn" %>
 	</div>
<% end %>