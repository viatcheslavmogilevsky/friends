<div class="row-fluid">
    <div class="span12">
        <div class="span4">
            <%= image_tag @user.avatar.url %>
            <%= render 'shared/button_toolbar' %>
        </div>
        <div class="span8">
            <h3> <%= @user.full_name %> </h3>
            <p>
                about me: <%= @user.description %>
            </p>
        </div>
    </div>
</div>
<%= render 'shared/post_form' %>
<% unless @items.blank? %>
    <%= paginate @items %>
	<div class="row-fluid">
		<div class="span12">
			<%= render :partial => "shared/item", :collection => @items %>
		</div>
	</div>
<% else %>
	<p><%= @user.name %> haven't yet any posts </p>
<% end %>			